{% if stocks %}
<div id="stcItems" class="container">

<ul class="nav nav-tabs">

  <li class="nav-item">
    <a class="nav-link active" data-toggle="tab" href="#tabAd">Adhérents</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" data-toggle="tab" href="#tabVal">Valeurs</a>
  </li>
  
</ul>

<div id="myTabContent" class="tab-content">

  <div class="tab-pane fade active show" id="tabAd">
<br>

<center>
<table id="dataTable" name="stocks" class="table-scroll small-first-col table table-striped fixed_header tablew">
   <thead class="table-primary" style="font-size:0.8em">
    <th class="t1">Nom Adhérent</th>

     {% for cat in catAv %}
     <th>{{ cat.LibelleCategorieAvoir }}</th>
     {% endfor %}

    <th class="t1">Total</th>
    <th class="t1">Part(%)</th>
    <th class="t1">Part cumutée(%)</th>
   </thead>
    <tbody class="body-half-screen">
     {% for stk in stocks %}
         <tr>
          <td class="pt-1 pb-1" id="{{ stk.id }}"> {{ stk.CodeAdherent.NomAdherent }}</td>

          {% for cat in catAv %}
          {% if stk.CategorieAvoir == cat %}
            <td class="pt-1 pb-1">{{ stk.Quantity|number_format }}</td>
          {% else %}
            <td class="pt-1 pb-1"> - </td>
          {% endif %}
          {% endfor %}

          <td class="pt-1 pb-1" id="{{ stk.id }}"> {{ stk.Quantity|number_format }}</td>
          <td class="pt-1 pb-1">?</td>
          <td class="pt-1 pb-1">?</td>
         </tr> 
     {% endfor %}
    </tbody>
    <tr>
     <th class="pt-1 pb-1">Total</th>
    {% for cat in catAv %}
     <td class="pt-1 pb-1">111</td>
    {% endfor %}
    <td class="pt-1 pb-1">?</td>
    <td class="pt-1 pb-1">?</td>
    </tr>
  </table>
</center>
</div>   


  <div class="tab-pane fade" id="tabVal">

<center>
<table id="dataTable" name="stocks" class="table-scroll small-first-col table table-striped fixed_header tablew">
   <thead class="table-primary" style="font-size:0.8em">
    <th class="t1">Valeur</th>

     {% for cat in catAv %}
     <th>{{ cat.LibelleCategorieAvoir }}</th>
     {% endfor %}

    <th class="t1">Total</th>
    <th class="t1">Part(%)</th>
    <th class="t1">Part cumutée(%)</th>
   </thead>
    <tbody class="body-half-screen">
     {% for stk in stocks %}
         <tr>
          <td class="pt-1 pb-1" id="{{ stk.id }}"> {{ stk.Isin }}</td>

          {% for cat in catAv %}
          {% if stk.CategorieAvoir == cat %}
            <td class="pt-1 pb-1">{{ stk.Quantity|number_format }}</td>
          {% else %}
            <td class="pt-1 pb-1"> - </td>
          {% endif %}
          {% endfor %}

          <td class="pt-1 pb-1" id="{{ stk.id }}"> {{ stk.Quantity|number_format }}</td>
          <td class="pt-1 pb-1">?</td>
          <td class="pt-1 pb-1">?</td>
         </tr> 
     {% endfor %}
    </tbody>
    <tr>
     <th class="pt-1 pb-1">Total</th>
    {% for cat in catAv %}
     <td class="pt-1 pb-1">111</td>
    {% endfor %}
    <td class="pt-1 pb-1">?</td>
    <td class="pt-1 pb-1">?</td>
    </tr>
  </table>
</center>


</div>


</div>

 {% else %}
  <div class="alert alert-dismissible alert-primary">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <h4 class="alert-heading">Tableau vide!</h4>
    <p class="mb-0">pas des données de stocks.</p>
    </div> 
  </div>
 {% endif %} 

