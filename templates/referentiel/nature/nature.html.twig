{% extends 'base.html.twig' %}

{% block title %}Code Nature{% endblock %}

{% block body %}

    <a class="btn btn-link" href="/ref" role="button"><img src="/img/retour.png"></a>

<center>
  <a class="btn" href="/naturec/new" role="button"><img src="/img/add-adr.png"></a>    
</center>

 {% if nature %}
  <table id="nature" name="nature"class="table table-striped" style="padding:5px; border-spacing:5px;">
   <thead>
    <th> ID</th>
    <th> Code Nature de Compte</th>
    <th> Libellé Nature de Compte </th>
    <th> Actions</th>
   </thead>
    <tbody>
     {% for nat in nature %}
         <tr>
          <td class="pt-1 pb-1"> {{ nat.id }}</td>
          <td class="pt-1 pb-1"> {{ nat.CodeNatureCompte }}</td>
          <td class="pt-1 pb-1"> {{ nat.LibelleNatureCompte }}</td>
          <td class="pt-1 pb-1"> 
            <a href="/naturec/edit/{{ nat.id }}" class="btn btn-secondary btn-sm">Modifier</a>
            <a href="#" class="btn btn-danger delete-nat btn-sm" data-id="{{ nat.id }}">Supprimer</a> 
          </td>
         </tr> 
     {% endfor %}
    </tbody>
  </table>

   <script src="/js/del/suppnat.js"></script>

  {% else %}
  <div class="alert alert-dismissible alert-primary">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <h4 class="alert-heading">Tableau vide!</h4>
  <p class="mb-0">pas des données de codes nature.</p>
  </div> 
  {% endif %}


{% endblock %}
