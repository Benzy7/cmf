{% extends 'base.html.twig' %}

{% block title %} Type Valeurs {% endblock %}

{% block body %}

    <a class="btn btn-link" href="/ref" role="button"><img src="/img/retour.png"></a>

<center>
  <a class="btn" href="/typevaleur/new" role="button"><img src="/img/add-adr.png"></a>    
</center>

 {% if typeValeurs %}
  <table id="typeValeurs" name="typeValeurs"class="table table-striped" style="padding:5px; border-spacing:5px;">
   <thead>
    <th></th>
    <th> Code Type Valeur</th>
    <th> Type Titre</th>
    <th> Libellé Réduit Type Valeur</th>
    <th> Libellé Type Valeur</th>
    <th> Date de mise a jour</th>
    <th> Actions</th>
   </thead>
    <tbody>
    {% set obs = 1 %}

     {% for tval in typeValeurs %}
         <tr>
          <th class="pt-1 pb-1"> {{ obs }}</th>
          <td class="pt-1 pb-1"> {{ tval.CodeTypeValeur }}</td>
          <td class="pt-1 pb-1"> {{ tval.TypeTitre }}</td>
          <td class="pt-1 pb-1"> {{ tval.LibelleReduitTypeValeur }}</td>
          <td class="pt-1 pb-1"> {{ tval.LibelleTypeValeur }}</td>
          <td class="pt-1 pb-1"> {% if tval.datemaj %} {{ tval.DateMaj|date("m/d/Y") }} {% endif %}</td>
          <td class="pt-1 pb-1"> 
            <a href="/typevaleur/edit/{{ tval.id }}" class="btn btn-secondary btn-sm">Modifier</a>
            <a href="#" class="btn btn-danger delete-tval btn-sm" data-id="{{ tval.id }}">Supprimer</a> 
          </td>
         </tr> 
         {% set obs = obs + 1 %}
     {% endfor %}
    </tbody>
  </table>

   <script src="/js/del/val/supptval.js"></script>

  {% else %}
  <div class="alert alert-dismissible alert-primary">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <h4 class="alert-heading">Tableau vide!</h4>
  <p class="mb-0">pas des données de Type Valeurs.</p>
  </div> 
  {% endif %}

{% endblock %}
